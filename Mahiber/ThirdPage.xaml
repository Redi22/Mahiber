<UserControl x:Class="Mahiber.forms.SignUpForms.ThirdPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mahiber.forms.SignUpForms"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Foreground="White"
             d:DesignHeight="400" d:DesignWidth="300">
    <StackPanel Width="200">
        <TextBlock Text="Default Violation Fines" Foreground="DarkCyan" Margin="0 10"/>

        <TextBox Name="FirstFin"
  materialDesign:HintAssist.Hint="First Fin"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        <TextBox Name="SecondFin"
  materialDesign:HintAssist.Hint="Second Fin"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        <TextBox Name="FinalFin"
  materialDesign:HintAssist.Hint="Final Fin"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        <TextBlock Text="Default Event Fines" Foreground="DarkCyan" Margin="0 10"/>
        <TextBox Name="EventFin"
  materialDesign:HintAssist.Hint="Event Fin"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" /> 
        <TextBlock Text="Default Payment Fines" Foreground="DarkCyan" Margin="0 10"/>
        <TextBox Name="PaymentFin"
  materialDesign:HintAssist.Hint="Payment Fin"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        <Button x:Name="FinishBtn" Click="FinishBtn_Click"
    Style="{StaticResource MaterialDesignRaisedAccentButton}"
    Width="150" Height="30"  Margin="30,30,20,30"
    >
            <TextBlock Text="Finish" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Button>

    </StackPanel>
</UserControl>
